<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/list_item_bg" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="76dp">
    <ImageView android:layout_gravity="center" android:id="@+id/newsimg" android:visibility="visible" android:layout_width="85dp" android:layout_height="60dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:src="@mipmap/newsloadingpic" android:scaleType="fitXY" android:contentDescription="@null"/>
    <View android:id="@+id/bottomline" android:background="#dcdcdc" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="8dp" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="18sp" android:textColor="#054578" android:ellipsize="end" android:gravity="start" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginRight="8dp" android:layout_toRightOf="@+id/newsimg" android:layout_alignParentTop="true"/>
    <TextView android:textSize="10sp" android:textColor="#666" android:id="@+id/newsclass" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_toRightOf="@+id/newsimg" android:layout_above="@+id/bottomline"/>
    <TextView android:textSize="14sp" android:textColor="#000000" android:gravity="start" android:id="@+id/writer" android:paddingLeft="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@mipmap/point_red" android:drawablePadding="2dp" android:layout_toRightOf="@+id/newsclass" android:layout_above="@+id/bottomline"/>
    <TextView android:textSize="14sp" android:textColor="#666" android:gravity="end" android:id="@+id/processtime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:drawableLeft="@mipmap/time_icon" android:drawablePadding="3dp" android:layout_above="@+id/bottomline" android:layout_alignParentRight="true"/>
    <TextView android:textSize="14sp" android:textColor="#666" android:gravity="center" android:id="@+id/taidu" android:background="@mipmap/atti" android:paddingLeft="5dp" android:paddingTop="3dp" android:paddingRight="5dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_above="@+id/bottomline" android:layout_alignParentRight="true"/>
</RelativeLayout>

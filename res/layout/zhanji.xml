<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/topnav"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
        <TextView android:textSize="16sp" android:gravity="right" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="网名"/>
        <EditText android:textSize="16sp" android:id="@+id/nickname" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16sp" android:layout_weight="1" android:inputType="text"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
        <TextView android:textSize="16sp" android:gravity="right" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="姓名"/>
        <EditText android:textSize="16sp" android:id="@+id/truename" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16sp" android:hint="真实姓名" android:layout_weight="1" android:inputType="text"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
        <TextView android:textSize="16sp" android:gravity="right" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="电话"/>
        <EditText android:textSize="16sp" android:id="@+id/phone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16sp" android:hint="电话" android:layout_weight="1" android:inputType="number"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
        <TextView android:textSize="16sp" android:gravity="right" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="战绩"/>
        <EditText android:textSize="16sp" android:id="@+id/zhanji" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16sp" android:hint="您的战绩" android:layout_weight="1" android:inputType="number"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:gravity="right" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="上传图片"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:layout_gravity="left" android:id="@+id/upload" android:background="@mipmap/topnav_bg" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="点击上传"/>
    </LinearLayout>
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
        <TextView android:id="@+id/kong" android:layout_width="100dp" android:layout_height="wrap_content" android:text="" android:layout_alignParentLeft="true"/>
        <ImageView android:layout_gravity="left" android:id="@+id/thumb" android:layout_width="60dp" android:layout_height="120dp" android:layout_toRightOf="@+id/kong" android:contentDescription="@null"/>
        <ImageView android:layout_gravity="left" android:id="@+id/shiyitu" android:layout_width="60dp" android:layout_height="120dp" android:layout_marginRight="10dp" android:layout_alignParentRight="true" android:contentDescription="@null"/>
        <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="示意图" android:layout_below="@+id/shiyitu" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
        <Button android:textSize="22dp" android:id="@+id/tijiao" android:layout_width="80dp" android:layout_height="wrap_content" android:text="提交"/>
    </LinearLayout>
</LinearLayout>

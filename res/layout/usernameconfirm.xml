<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/changenamebg" android:padding="15dp" android:layout_width="260dp" android:layout_height="wrap_content">
        <TextView android:textSize="22sp" android:textColor="#2f8aff" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/unctitile" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/inputusername"/>
        <EditText android:textSize="20sp" android:textColor="@color/black" android:id="@+id/loginname" android:background="@drawable/mobileinputbg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxLength="20" android:inputType="text" android:textCursorDrawable="@null"/>
        <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tishi" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="第一次登陆，您可以修改您的昵称作为爱济南客户端的用户名"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
            <Button android:textSize="22sp" android:textColor="@color/white" android:id="@+id/cancel" android:background="@drawable/loginbtnbg" android:layout_width="0dp" android:layout_height="wrap_content" android:text="取消" android:layout_weight="1"/>
            <View android:layout_width="20dp" android:layout_height="match_parent"/>
            <Button android:textSize="22sp" android:textColor="@color/white" android:id="@+id/confirm" android:background="@drawable/loginbtnbg" android:layout_width="0dp" android:layout_height="wrap_content" android:text="确定" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

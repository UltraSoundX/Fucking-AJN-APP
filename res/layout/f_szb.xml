<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v4.view.ViewPager android:id="@+id/viewpager" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/errlayout" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_gravity="center" android:id="@+id/loading" android:layout_width="50dp" android:layout_height="50dp"/>
        <TextView android:textSize="18sp" android:textColor="@color/gainsboro" android:gravity="center" android:layout_gravity="center" android:id="@+id/reload" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/clickreload" android:drawableTop="@mipmap/ic_error"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/jumplayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true">
        <Button android:textSize="18sp" android:textColor="@color/allform_child_desc" android:id="@+id/prever" android:background="@drawable/shape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="上一版 " android:layout_alignParentLeft="true"/>
        <Button android:textSize="18sp" android:textColor="@color/allform_child_desc" android:id="@+id/vershow" android:background="@drawable/shape" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_centerHorizontal="true"/>
        <Button android:textSize="18sp" android:textColor="@color/allform_child_desc" android:id="@+id/nextver" android:background="@drawable/shape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下一版 " android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#f3f3f3" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textColor="#464646" android:id="@+id/rmzx" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:drawableLeft="@mipmap/plleft" android:drawablePadding="3dp"/>
    </LinearLayout>
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/headimg" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
        <TextView android:textSize="14sp" android:textColor="#9e9e9e" android:id="@+id/floor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_below="@+id/headimg" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="16sp" android:textColor="#333333" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/uname" android:layout_width="wrap_content" android:layout_height="24dp" android:layout_marginTop="10dp" android:layout_toRightOf="@+id/headimg" android:layout_alignParentTop="true"/>
        <TextView android:textSize="16sp" android:textColor="#9e9e9e" android:id="@+id/postmsg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="@string/postsixin" android:layout_alignBaseline="@+id/uname" android:layout_alignParentRight="true"/>
        <TextView android:textSize="16sp" android:textColor="#0000ff" android:id="@+id/delete" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="@string/chehui" android:layout_alignBaseline="@+id/uname" android:layout_alignParentRight="true"/>
        <TextView android:textSize="18sp" android:textColor="#333333" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/headimg" android:layout_below="@+id/uname"/>
        <ImageView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/qlimg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="100dp" android:scaleType="fitCenter" android:layout_toRightOf="@+id/headimg" android:layout_below="@+id/content" android:contentDescription="@null"/>
        <TextView android:textSize="16sp" android:textColor="#9e9e9e" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/datetime" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_toRightOf="@+id/headimg" android:layout_below="@+id/qlimg"/>
        <TextView android:textSize="16sp" android:textColor="#9e9e9e" android:gravity="center_vertical" android:id="@+id/writepl" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_marginRight="5dp" android:drawableLeft="@mipmap/plimg_s" android:drawablePadding="5dp" android:layout_below="@+id/qlimg" android:layout_alignParentRight="true"/>
        <TextView android:textSize="16sp" android:textColor="#9e9e9e" android:gravity="center_vertical" android:id="@+id/zan" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_marginRight="20dp" android:drawableRight="@mipmap/plitemding" android:drawablePadding="5dp" android:layout_toLeftOf="@+id/writepl" android:layout_below="@+id/qlimg"/>
        <TextView android:textSize="16sp" android:textColor="#9e9e9e" android:gravity="center" android:id="@+id/tv_ding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_marginRight="20dp" android:text="+1" android:layout_toLeftOf="@+id/writepl" android:layout_below="@+id/qlimg"/>
    </RelativeLayout>
    <View android:background="#dcdcdc" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
</LinearLayout>

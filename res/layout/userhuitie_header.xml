<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp">
        <ImageView android:id="@+id/uimg" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:scaleType="fitXY" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
        <TextView android:textSize="16sp" android:textColor="#498a90" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/uname" android:layout_width="wrap_content" android:layout_height="24dp" android:layout_marginTop="15dp" android:layout_toRightOf="@+id/uimg" android:layout_alignParentTop="true"/>
        <TextView android:textSize="16sp" android:textColor="#333333" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/htcontent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/uimg" android:layout_below="@+id/uname"/>
        <RelativeLayout android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/zhutielayout" android:background="#f5f5f5" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/uimg" android:layout_below="@+id/htcontent">
            <ImageView android:id="@+id/zhutieimg" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:scaleType="fitXY" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
            <TextView android:textSize="16sp" android:textColor="#333333" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/zhutietitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/zhutieimg" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="36dp" android:layout_toRightOf="@+id/uimg" android:layout_below="@+id/zhutielayout">
            <TextView android:textSize="16sp" android:textColor="#9e9e9e" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/httime" android:layout_width="wrap_content" android:layout_height="36dp"/>
            <RelativeLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="36dp" android:layout_marginRight="20dp" android:layout_weight="1">
                <TextView android:textSize="16sp" android:textColor="#9e9e9e" android:gravity="center_vertical" android:id="@+id/zan" android:layout_width="wrap_content" android:layout_height="36dp" android:drawableLeft="@mipmap/plitemding" android:drawablePadding="5dp"/>
                <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/tv_ding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+1" android:layout_toRightOf="@+id/zan" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView android:textSize="16sp" android:textColor="#9e9e9e" android:gravity="center_vertical" android:id="@+id/reply" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_marginRight="5dp" android:drawableLeft="@mipmap/plimg_s" android:drawablePadding="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="240dp" android:layout_height="wrap_content">
        <TextView android:textSize="22sp" android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:background="@mipmap/topnav_bg" android:layout_width="match_parent" android:layout_height="50dp" android:text="请选择上传方式："/>
        <Button android:textSize="18sp" android:id="@+id/bbsalbum" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="从相册选取"/>
        <Button android:textSize="18sp" android:id="@+id/bbscamera" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="拍照"/>
        <Button android:textSize="18sp" android:id="@+id/bbsphotocancel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="取消"/>
    </LinearLayout>
</LinearLayout>
